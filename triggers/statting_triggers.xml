				<script>statting.homeland = matches[2]
statting.level = tonumber(matches[3])

if statting.level &gt;= 5 then
  local msg = "You are too high of a level to restat."
  showNotification("WoTMUD Statting", msg)
  statting:echo("\n" .. msg .. "\n", false, true)
